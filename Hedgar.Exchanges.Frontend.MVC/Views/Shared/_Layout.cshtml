<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Crypton</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/materialdesign")
    @Styles.Render("~/Content/animatecss")
    @Styles.Render("~/Content/vue-select")
    @Styles.Render("~/Content/fontawesome")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/moment")
    @Scripts.Render("~/bundles/currency")
    @Scripts.Render("~/bundles/chart")
    @Scripts.Render("~/bundles/vue")
    @Scripts.Render("~/bundles/vue-select")
    @Scripts.Render("~/bundles/materialdesign")
    @Scripts.Render("~/bundles/main")
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>
    @Html.Partial("~/Views/Shared/_Navbar.cshtml")
    <div id="vueApp" class="container" v-cloak>
        <div class="loader-holder" v-if="isLoading">
            <bounce-loader class="my-loader" :color="'#bada55'" :loading="isLoading" :size="100" :sizeunit="'px'"></bounce-loader>
        </div>
        @RenderBody()
        @Html.Partial("~/Views/Shared/_Footer.cshtml")
    </div>
    
    @RenderSection("scripts", required: false)
</body>
</html>
